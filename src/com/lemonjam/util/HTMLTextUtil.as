package com.lemonjam.util{		public class HTMLTextUtil	{		private var _elements:Array = new Array("<p>", "</p>", "&amp;", "&#8217;");		private var _replace:Array = new Array("", "\n", "&", "'");				public function HTMLTextUtil(){}						public function convertText(string:String):String		{			var _string:String = string;									for(var i=0;i<_elements.length;i++){				_string = _string.split(_elements[i]).join(_replace[i]);			}									return _string;		}	}}