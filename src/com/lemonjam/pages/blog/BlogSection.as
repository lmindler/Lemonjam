package com.lemonjam.pages.blog{	import com.lemonjam.pages.blog.BlogSectionBase;	import com.greensock.*;	import flash.events.DataEvent;	import flash.events.StatusEvent;	import flash.events.Event;		public class BlogSection extends BlogSectionBase	{				public function BlogSection()		{			this.addEventListener(DataEvent.DATA, _dataLoaded);			this.y = 65;		}				public function build():void		{			showing = true;			resize();						_holder.build();						TweenLite.to(_holder, .5, {alpha:1});			TweenLite.to(overlay, .5, {alpha:1});			TweenLite.to(_slide, .5, {alpha:1});			this.mouseChildren = this.mouseEnabled = true;			_slide.build(true);						_scrollbar.build();			_scrollbar.addEventListener(Event.CHANGE, _scrolling);		}				public function unbuild():void		{			_holder.unbuild();			TweenLite.to(_holder, .5, {alpha:0});			TweenLite.to(overlay, .5, {alpha:0});			TweenLite.to(_slide, .5, {alpha:0});			this.mouseChildren = this.mouseEnabled = false;			showing = false;						_scrollbar.unbuild();			_scrollbar.removeEventListener(Event.CHANGE, _scrolling);		}				private function _scrolling(e:Event):void		{			var _max = (_holder.width - stage.stageWidth);			var _newX:Number = (_max * _scrollbar.percentage) / 100;			TweenLite.to(_holder, .5, {x:-(_newX)});		}						public function resize():void		{			if(showing){				_holder.resize();				this.x = 0;				if(_slide != null)		_slide.resize();				overlay.resize(stage.stageWidth, stage.stageHeight);				_scrollbar.y = stage.stageHeight - 132;				_scrollbar.updateWidth(stage.stageWidth);			}			else{				this.x = (stage.stageWidth*2);			}		}	}}