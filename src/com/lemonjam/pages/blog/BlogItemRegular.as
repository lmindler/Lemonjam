package com.lemonjam.pages.blog{	import flash.display.MovieClip;	import flash.events.Event;	import flash.text.TextField;		import com.greensock.*;	import flash.text.StyleSheet;	import flash.text.TextFormat;		public class BlogItemRegular extends BlogItemBase	{		private var _title:TextField;		private var _body:TextField;		private var _css:StyleSheet;		private var _bodyFormat:TextFormat = new TextFormat();		public function BlogItemRegular(aData:Object, index:Number, totalLength:Number, stageHeight:Number, css:StyleSheet)		{			_css = css;						_title = getChildByName("titleTXT") as TextField;			_body = getChildByName("bodyTXT") as TextField;						data = aData;			_isTXT.text = index.toString();			_ofTXT.text = totalLength.toString();			_bg.height = stageHeight - 201;			type = "regular";			itemWidth = _body.width;						_title.alpha = _body.alpha = 0;		}				public function loadContent():void		{			_title.htmlText = data.title;			_body.styleSheet = _css;			_body.htmlText = data.desc;									TweenLite.to(_title, .3, {alpha:1, delay:.2});			TweenLite.to(_body, .3, {alpha:1, delay:.3});						loaded = true;						dispatchEvent(new Event(Event.COMPLETE, true));		}						public function resize():void		{			_body.width = _bg.width - 40;		}			}	}