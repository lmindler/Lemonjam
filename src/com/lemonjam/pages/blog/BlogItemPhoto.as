package com.lemonjam.pages.blog{	import flash.display.MovieClip;	import flash.events.Event;	import com.lemonjam.core.ImageLoader;	import com.greensock.*;		public class BlogItemPhoto extends BlogItemBase	{		private var _img:ImageLoader;		private var _loaded:Boolean = false;		private var _origHeight:Number = 0;		private var _origWidth:Number = 0;				public function BlogItemPhoto(aData:Object, index:Number, totalLength:Number, stageHeight:Number)		{			data = aData;			_isTXT.text = index.toString();			_ofTXT.text = totalLength.toString();			_bg.height = stageHeight - 201;			type = "photo";						var tempWidth:Number = aData.width;			var tempHeight:Number = aData.height;									if(aData.height > (_bg.height-155)){				tempHeight = (_bg.height - 155);				var _percent:Number = (((_bg.height-155)*100) / aData.height);				tempWidth = Math.round((aData.width * _percent)/100);			}						_hitbox.width = tempWidth + 100;			_bg.width = tempWidth + 100;						}						public function loadContent():void		{			_img = new ImageLoader(data.photo);			_img.y = 105;			_img.x = 50;			_img.alpha = 0;			_img.addEventListener(Event.COMPLETE, _loadComplete);			this.addChild(_img);		}				private function _loadComplete(e:Event):void		{			_origHeight = _img.height;			_img.height = (_origHeight > (_bg.height-155)) ? (_bg.height - 155) : _origHeight;			_img.scaleX = _img.scaleY;						TweenLite.to(_img, .3, {alpha:1, delay:.3});						loaded = true;						dispatchEvent(new Event(Event.COMPLETE, true));		}				public function resize():void		{			if(loaded){				_img.height = (_origHeight > (_bg.height-155)) ? (_bg.height - 155) : _origHeight;				_img.scaleX = _img.scaleY;								itemWidth = _img.width;			}		}	}	}