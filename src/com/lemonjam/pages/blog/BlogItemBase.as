package com.lemonjam.pages.blog{	import flash.display.MovieClip;	import flash.text.TextField;	import com.lemonjam.events.BlogEvent;	import com.greensock.*;	import flash.events.Event;			public class BlogItemBase extends MovieClip	{		private var _data:Object;		private var _showing:Boolean = false;		private var _loaded:Boolean = false;		private var _type:String;		private var _stageHeight:Number = 0;						protected var _circle:MovieClip;		protected var _slash:MovieClip;		protected var _isTXT:TextField;		protected var _ofTXT:TextField;		protected var _bg:MovieClip;		protected var _hitbox:MovieClip;		protected var _loader:MovieClip;				public function BlogItemBase()		{			_circle = getChildByName("circleMC") as MovieClip;			_loader = _circle.getChildByName("loaderMC") as MovieClip;			_slash = _circle.getChildByName("slashMC") as MovieClip;			_isTXT = _circle.getChildByName("isTXT") as TextField;			_ofTXT = _circle.getChildByName("ofTXT") as TextField;			_bg = getChildByName("bgMC") as MovieClip;			_hitbox = getChildByName("hitboxMC") as MovieClip;						_slash.alpha = _isTXT.alpha = _ofTXT.alpha = 0;						_bg.width = 145;		}				public function set itemWidth(num:Number):void		{			_hitbox.width = _bg.width = num + 100;		}				public function set itemHeight(num:Number):void		{			_hitbox.height = _bg.height = num - 200;		}				public function set data(value:Object):void		{			_data = value;		}				public function get data():Object		{			return _data;		}				public function set showing(value:Boolean):void		{			_showing = value;		}				public function get showing():Boolean		{			return _showing;		}				public function set loaded(value:Boolean):void		{			if(value && !_loaded){				TweenLite.to(_slash, .2, {alpha:1});				TweenLite.to(_isTXT, .2, {alpha:1});				TweenLite.to(_ofTXT, .2, {alpha:1});				TweenLite.to(_loader, .2, {alpha:0});			}						_loaded = value;		}				public function get loaded():Boolean		{			return _loaded;		}				public function set type(value:String):void		{			_type = value;		}				public function get type():String		{			return _type;		}				public function set stageH(value:Number):void		{			_bg.height = value - 201;			_stageHeight = value;		}				public function get stageH():Number		{			return _stageHeight;		}	}}