package com.lemonjam.pages.blog{	import com.lemonjam.events.BlogEvent;		public class BlogHolder extends BlogHolderBase	{				public function BlogHolder()		{			this.y = 68;		}				public function build():void		{			this.addEventListener(BlogEvent.BLOG_ITEM_LOADED, _blogItemLoaded, false, 0, true);		}				public function unbuild():void		{			this.removeEventListener(BlogEvent.BLOG_ITEM_LOADED, _blogItemLoaded);		}				private function _blogItemLoaded(e:BlogEvent):void		{			//trace("blog item loaded");		}				public function resize():void		{			for(var i=0;i<posts.length;i++){				posts[i].stageH = stage.stageHeight;				posts[i].resize();				if(i !=0 )	posts[i].x = posts[i-1].x + posts[i-1].width + 1;			}		}	}}