package com.lemonjam.pages.blog{	import com.lemonjam.pages.SectionBase;	import com.greensock.*;	import com.greensock.*;	import flash.events.Event;	import flash.events.DataEvent;	import flash.display.MovieClip;	import com.lemonjam.ui.PatternOverlay;	import com.lemonjam.ui.slide.BackgroundSlide;	import com.lemonjam.ui.Scrollbar;		public class BlogSectionBase extends SectionBase	{		protected var _slide:BackgroundSlide;		protected var _loaded:Boolean = false;		protected var _holder:MovieClip;		protected var overlay:PatternOverlay;		protected var _scrollbar:Scrollbar = new Scrollbar();				public function BlogSectionBase()		{			_holder = getChildByName("holderMC") as MovieClip;			this.alpha = 1;			this.addChild(_scrollbar);		}				protected function _dataLoaded(e:DataEvent):void		{			overlay = new PatternOverlay(.1);			this.addChildAt(overlay, 0);						_loaded = true;						_slide = new BackgroundSlide(("http://lemonjamphoto.com/cms/workspace/" + data[0]), true);			this.addChildAt(_slide, 0);			_slide.addEventListener(Event.COMPLETE, _imageLoaded);					}				private function _imageLoaded(e:Event):void		{			_holder.feedRequest();			_slide.removeEventListener(Event.COMPLETE, _imageLoaded);			if(showing)		TweenLite.to(_holder, .5, {alpha:1});		}	}}