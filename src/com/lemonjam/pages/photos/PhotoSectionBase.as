package com.lemonjam.pages.photos{	import com.lemonjam.pages.SectionBase;	import com.lemonjam.core.UriEncoder;	import flash.display.MovieClip;	import flash.events.MouseEvent;		import com.greensock.*;	import com.lemonjam.ui.slideshow.Slideshow;	import com.lemonjam.ui.PatternOverlay;	import com.asual.swfaddress.*;		public class PhotoSectionBase extends SectionBase	{		private var _encoder:UriEncoder = new UriEncoder();		protected var _rightArrow:MovieClip;		protected var _leftArrow:MovieClip;				protected var _slideshow:Slideshow;		protected var _overlay:PatternOverlay;				protected var _currentImage:Number = 0;				public function PhotoSectionBase()		{			//_encoder.make						_rightArrow = getChildByName("rightArrowMC") as MovieClip;			_leftArrow = getChildByName("leftArrowMC") as MovieClip;			setArrow(_leftArrow, false);			setArrow(_rightArrow, false);		}								protected function setArrow(aArrow:MovieClip, active:Boolean = false):void		{			if(!active){				aArrow.unbuild();				aArrow.buttonMode = false;				if(aArrow.hasEventListener(MouseEvent.CLICK))	aArrow.removeEventListener(MouseEvent.CLICK, _arrowClick);				TweenLite.to(aArrow, .3, {alpha:0});			}			else{				aArrow.buttonMode = true;				aArrow.build();				if(! aArrow.hasEventListener(MouseEvent.CLICK))	aArrow.addEventListener(MouseEvent.CLICK, _arrowClick);				TweenLite.to(aArrow, .3, {alpha:1});			}		}				private function _arrowClick(e:MouseEvent):void		{			var _newNum:Number = _slideshow.currentPhoto;						if(e.currentTarget == _rightArrow)		_newNum++;			else									_newNum--;						_slideshow.getSlide(_newNum);					}				public function setURIs():void		{			var _uris:Array = new Array();			for(var i=0;i<data.length;i++){				_uris.push(data[i].title);			}						uris = _uris;		}	}}