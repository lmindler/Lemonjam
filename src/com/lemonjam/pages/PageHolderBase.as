package com.lemonjam.pages{	import flash.display.MovieClip;	import flash.events.ProgressEvent;	import flash.events.Event;	import com.lemonjam.pages.photos.PhotoSection;	import com.lemonjam.core.DataSorter;		public class PageHolderBase extends MovieClip	{		protected var _home:MovieClip;				private var _contactSection:MovieClip;		private var _aboutSection:MovieClip;		private var _blogSection:MovieClip;				private var _sections:Array;		private var _categories:Array;				public function PageHolderBase()		{			_home = getChildByName("homeMC") as MovieClip;						_contactSection = getChildByName("contactMC") as MovieClip;			_aboutSection = getChildByName("aboutMC") as MovieClip;			_blogSection = getChildByName("blogMC") as MovieClip;						_sections = new Array(_contactSection, _aboutSection, _blogSection);					}					public function set data(value:DataSorter):void		{			_home.data = value.featured;						var _arraycounter:Number = 3;			_sections[0].data = value.contact;			_sections[1].data = value.about;			_sections[2].data = value.blogImage;						for(var i=0;i<value.photos.length;i++){				_sections[_arraycounter].dataLoaded(value.photos[i]);				_sections[_arraycounter].setURIs();				_arraycounter++;			}		}				public function set categories(value:Array):void		{			_categories = value;						_home.x = _contactSection.x = _aboutSection.x = stage.stageWidth;						for(var i=0;i<_categories.length;i++){				if(i > 1){					var _photoSection:PhotoSection = new PhotoSection();					this.addChild(_photoSection);					_photoSection.y = 65;					_sections.push(_photoSection);					_photoSection.x = stage.stageWidth;				}				_sections[i].category = _categories[i];			}			}				public function get categories():Array		{			return _categories;		}				public function get sections():Array		{			return _sections;		}				public function resize():void		{			if(_home.showing)		_home.resize();			for(var i=0;i<_sections.length;i++){				_sections[i].resize();			}		}	}}