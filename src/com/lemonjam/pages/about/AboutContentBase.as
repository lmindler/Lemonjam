package com.lemonjam.pages.about{	import flash.display.MovieClip;	import flash.display.Stage;	import com.greensock.*;	import com.lemonjam.ui.PatternOverlay;	import flash.events.Event;	import com.lemonjam.ui.slide.BackgroundSlide;		public class AboutContentBase extends MovieClip	{				private var _data:Object;		private var _showing:Boolean = false;		private var _loaded:Boolean = false;		protected var slide:BackgroundSlide;		protected var centerContent:MovieClip;		protected var overlay:PatternOverlay;				public function AboutContentBase()		{			centerContent = getChildByName("contentMC") as MovieClip;			centerContent.alpha = this.alpha = 0;			overlay = new PatternOverlay();			this.y = 65;		}				public function build():void		{			TweenLite.to(this, .5, {alpha:1});			if(! showing && _loaded){				TweenLite.to(centerContent, .5, {alpha:1})				this.mouseChildren = this.mouseEnabled = true;				showing = true;			}						slide.build(true);			resize();		}				public function unbuild():void		{			TweenLite.to(this, .5, {alpha:0});			TweenLite.to(centerContent, .5, {alpha:0})			this.mouseChildren = this.mouseEnabled = false;			showing = false;		}				public function resize():void		{			centerContent.x = (stage.stageWidth/2) - (centerContent.width/2);			centerContent.y = (stage.stageHeight/2) - (centerContent.height/2);			if(overlay != null)		overlay.resize(stage.stageWidth, stage.stageHeight);			if(slide != null)		slide.resize();		}				protected function _imageLoaded(e:Event):void		{			_loaded = true;			resize();			trace("image loaded -- resizing");			build();		}								//----------------------------------------------------------------------------		//								SET & GET		//----------------------------------------------------------------------------				public function set data(value:Object):void		{			_data = value;		}				public function get data():Object		{			return _data;		}				public function set showing(value:Boolean):void		{			_showing = value;		}				public function get showing():Boolean		{			return _showing;		}	}}