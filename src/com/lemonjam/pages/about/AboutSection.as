package com.lemonjam.pages.about{	import com.lemonjam.pages.about.AboutBase;	import flash.display.MovieClip;	import flash.events.DataEvent;	import com.asual.swfaddress.*;	import com.greensock.*;	import com.lemonjam.ui.slide.BackgroundSlide;		public class AboutSection extends AboutBase	{				private var _slide:BackgroundSlide;				private var _currentPage:Number = 0;		private var _pages:Array;				public function AboutSection()		{			this.addEventListener(DataEvent.DATA, _dataLoaded);			this.y = 65;			_pages = new Array(_laura, _jocelyn, _content);		}				private function _dataLoaded(e:DataEvent):void		{			for(var i=0;i<data.length;i++){				_pages[i].data = data[i];				_pages[i].dataLoaded();			}		}				public function build():void		{			showing = true;			this.x = 0;			TweenLite.to(this, .5, {alpha:1});						if(SWFAddress.getValue() == "/about")					_currentPage = 2;			else if(SWFAddress.getValue() == "/about/jocelyn")		_currentPage = 1;			else if(SWFAddress.getValue() == "/about/laura")		_currentPage = 0;						for(var i=0;i<_pages.length;i++){				if(_currentPage == i)		_pages[i].build();				else						_pages[i].unbuild();			}					}				public function unbuild():void		{			showing = false;			this.x = stage.stageWidth;			TweenLite.to(this, .5, {alpha:0, onComplete:resize});		}				public function resize():void		{			if(showing){				this.x = 0;				for(var i=0;i<_pages.length;i++){					_pages[i].resize();				}			}			else{				this.x = (stage.stageWidth*2);			}		}	}}