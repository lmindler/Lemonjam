package com.lemonjam.pages.about{	import flash.display.MovieClip;	import flash.events.DataEvent;	import flash.events.Event;	import com.greensock.*;	import com.lemonjam.ui.text.*;	import com.lemonjam.ui.slide.BackgroundSlide;		public class AboutContent extends AboutContentBase	{		private var _contentHeight:Number = 0;		private var _content:MovieClip = new MovieClip;		private var _lauraLink:MovieClip;		private var _jocelynLink:MovieClip;						public function AboutContent()		{			_lauraLink = centerContent.getChildByName("lauraLinkMC") as MovieClip;			_jocelynLink = centerContent.getChildByName("jocelynLinkMC") as MovieClip;						_lauraLink.setButton("about laura", 216, "about/laura");			_jocelynLink.setButton("about jocelyn", 216, "about/jocelyn");		}				public function dataLoaded():void		{			var _tempArray:Array = new Array();			var _tempString:String;						var _desc:String = data.description;									_tempArray = _desc.split("--start-title--");			centerContent.addChild(_content);						for(var i=0;i<_tempArray.length;i++){				var _titleString:String = _tempArray[i].substr(0, (_tempArray[i].search("--end-title--")));				var _descString:String = _tempArray[i].substr((_tempArray[i].search("--end-title--") + 14), _tempArray[i].length);								if(_titleString != ""){					var _title:Title = new Title(_titleString);					_title.y = _contentHeight;										var _description:Description = new Description(_descString);					_description.y = _title.y + _title.height - 10;					_contentHeight = _description.y + _description.height;										_title.x = _description.x = 350;										_content.addChild(_title);					_content.addChild(_description);				}			}						_content.y = (this.height/2) - ((_content.height + _jocelynLink.height + 15)/2);			_lauraLink.y = _jocelynLink.y = _content.y + _content.height + 15;						slide = new BackgroundSlide("http://lemonjamphoto.com/cms/workspace/uploads/" + data.image.filename);			this.addChildAt(slide, 0);			slide.addEventListener(Event.COMPLETE, _imageLoaded);			this.addChildAt(overlay, 1);		}	}}