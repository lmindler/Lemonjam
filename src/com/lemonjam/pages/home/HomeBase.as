package com.lemonjam.pages.home{	import flash.display.MovieClip;	import flash.events.ProgressEvent;	import com.lemonjam.ui.PatternOverlay;		public class HomeBase extends MovieClip	{		protected var overlay:PatternOverlay;		protected var slideshow:MovieClip;		protected var introduction:MovieClip;				private var _showing:Boolean = false;		private var _firstLoad:Boolean = true;				private var _data:Array;						public function HomeBase()		{			slideshow = getChildByName("slideshowMC") as MovieClip;			introduction = getChildByName("introductionMC") as MovieClip;			overlay = new PatternOverlay(.4, 0x000000);			this.addChildAt(overlay, 1);						slideshow.addEventListener(ProgressEvent.PROGRESS, _progress);					}				public function init():void		{					}				private function _progress(e:ProgressEvent):void		{			dispatchEvent(e);		}				public function set data(value:Array):void		{			_data = value;			slideshow.dataLoaded(_data);		}				public function get data():Array		{			return _data;		}				public function set showing(value:Boolean):void		{			_showing = value;		}				public function get showing():Boolean		{			return _showing;		}				public function set firstLoad(value:Boolean):void		{			_firstLoad = value;		}		public function get firstLoad():Boolean		{			return _firstLoad;		}	}}