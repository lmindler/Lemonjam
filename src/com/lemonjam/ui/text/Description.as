package com.lemonjam.ui.text{	import flash.display.MovieClip;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormatAlign;			public class Description extends MovieClip	{		private var _txt:TextField;				public function Description(desc:String, descWidth:Number = 0)		{			_txt = getChildByName("descText") as TextField;			_txt.text = desc;			_txt.autoSize = TextFieldAutoSize.LEFT;			_txt.autoSize = TextFormatAlign.LEFT;			_txt.width = 458;						if(descWidth != 0)		_txt.width = descWidth;		}	}}