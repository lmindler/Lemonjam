package com.lemonjam.ui.text{	import flash.display.MovieClip;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormatAlign;			public class Title extends MovieClip	{		private var _txt:TextField;				public function Title(value:String, aWidth:Number = 0)		{			_txt = getChildByName("titleText") as TextField;			if(aWidth !=0)		_txt.width = aWidth;			//_txt.autoSize = TextFieldAutoSize.LEFT;			_txt.autoSize = TextFormatAlign.LEFT;			_txt.text = value;		}	}}