package com.lemonjam.ui{	import flash.display.MovieClip;	import flash.display.BitmapData;	import flash.geom.Rectangle;	import flash.display.Stage;		import com.lemonjam.ui.PatternTile;		public class PatternOverlay extends MovieClip	{		private var _tile:PatternTile;		private var _rect:MovieClip;		private var _patternSprite:MovieClip;				private var _color:uint = 0x000000;				public function PatternOverlay(darkness:Number = .5, color:uint = 0x000000)		{			_rect = new MovieClip();			_rect.alpha = darkness;						_rect.graphics.beginFill(color);			_rect.graphics.drawRect(0, 0, 20, 20);			_rect.graphics.endFill();			addChild(_rect);						_tile = new PatternTile();						_patternSprite = new MovieClip();			this.addChild(_patternSprite);		}				public function resize(aWidth:Number, aHeight:Number):void{						_rect.width = aWidth;			_rect.height = aHeight;			_patternSprite.graphics.clear();						var tileBitmap:BitmapData = new BitmapData(3, 3, true, 0x000000);			tileBitmap.draw(_tile);			_patternSprite.graphics.beginBitmapFill(tileBitmap, null);			_patternSprite.graphics.drawRect(0, 0, aWidth, aHeight);			_patternSprite.graphics.endFill();					}	}}