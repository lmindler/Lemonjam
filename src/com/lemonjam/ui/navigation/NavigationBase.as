package com.lemonjam.ui.navigation{	import flash.display.MovieClip;	import com.lemonjam.ui.navigation.NavigationItem;		public class NavigationBase extends MovieClip	{		protected var logo:MovieClip;		protected var bg:MovieClip;		protected var navArray:Array = new Array();				private var _navHolder:MovieClip;				public function NavigationBase()		{			logo = getChildByName("logoMC") as MovieClip;			logo.y = -130;			bg = getChildByName("bgMC") as MovieClip;			bg.y = -65;			_navHolder = new MovieClip();			this.addChild(_navHolder);					}				public function setNavigation(categories:Array):void		{			for(var i=0;i<categories.length;i++){				var _showDivider:Number = (i == categories.length-1) ? 0 : 1;				var _navItem:NavigationItem = new NavigationItem(categories[i], _showDivider);				_navHolder.addChild(_navItem);				navArray.push(_navItem);				_navItem.alpha = 0;				_navItem.x = (i == 0) ? 0 : (navArray[i-1].x + navArray[i-1].width + 10);				_navItem.y = -50;			}		}				public function resize():void		{			_navHolder.x = stage.stageWidth - _navHolder.width - 5;			bg.width = stage.stageWidth;		}	}}