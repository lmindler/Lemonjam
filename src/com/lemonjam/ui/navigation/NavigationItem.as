package com.lemonjam.ui.navigation{	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.text.TextField;	import flash.text.TextFormatAlign;	import flash.text.TextFieldAutoSize;		import com.greensock.*;	import com.greensock.plugins.*;	import com.asual.swfaddress.*;		public class NavigationItem extends MovieClip	{		private var _title:TextField;		private var _divider:MovieClip;		private var _hitbox:MovieClip;		private var _selected:Boolean = false;				public function NavigationItem(aTitle:String, dividerAlpha:Number = 1)		{						TweenPlugin.activate([TintPlugin, ColorTransformPlugin]);						_title = getChildByName("navTEXT") as TextField;			_title.autoSize = TextFormatAlign.LEFT;			_title.autoSize = TextFieldAutoSize.LEFT;						_title.text = aTitle.toUpperCase();						_divider = getChildByName("dividerMC") as MovieClip;			_divider.x = _title.width + 10;			_divider.alpha = dividerAlpha;						_hitbox = getChildByName("hitboxMC") as MovieClip;									_hitbox.width = _title.width + 10;						_hitbox.addEventListener(MouseEvent.MOUSE_OVER, _btnOver);			_hitbox.addEventListener(MouseEvent.MOUSE_OUT, _btnOut);			_hitbox.addEventListener(MouseEvent.MOUSE_UP, _btnUp);			this.buttonMode = true;		}						public function set selected(value:Boolean){			_selected = value;			if(value)	TweenLite.to(_title, .7, {colorTransform:{tint:0xFFF600, tintAmount:1}});			else		TweenLite.to(_title, .7, {colorTransform:{tintAmount:0}});		}				private function _btnOver(e:MouseEvent):void		{			TweenLite.to(_title, .7, {colorTransform:{tint:0xFFF600, tintAmount:1}});		}						private function _btnOut(e:MouseEvent):void		{			if(!_selected)	TweenLite.to(_title, .2, {colorTransform:{tintAmount:0}});		}				private function _btnUp(e:MouseEvent):void		{			var _navName:String = _title.text.toLowerCase();			//if(_navName != "about" && _navName != "contact")	_navName += "/1";			SWFAddress.setValue(_navName);		}	}}