package com.lemonjam.ui.slide{	import flash.display.MovieClip;	import com.lemonjam.core.ImageLoader;		public class SlideBase extends MovieClip	{		private var _showing:Boolean = false;		private var _loaded:Boolean = false;		protected var _img:ImageLoader;		protected var HORIZONTAL:Boolean = true;		protected var _forceHorizontal:Boolean = false;				public function SlideBase()		{					}				public function set showing(value:Boolean):void		{			_showing = value;		}				public function get showing():Boolean		{			return _showing;		}				public function set loaded(value:Boolean):void		{			_loaded = value;		}				public function get loaded():Boolean		{			var temp:Boolean = false;			if(_img)	temp = _img.loaded;			return temp;		}	}}