package com.lemonjam.ui.slideshow{	import flash.display.MovieClip;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormatAlign;		public class IsOf extends MovieClip	{		private var _isTXT:TextField;		private var _ofTXT:TextField;				public function IsOf()		{			_isTXT = getChildByName("isTXT") as TextField;			_ofTXT = getChildByName("ofTXT") as TextField;						_isTXT.autoSize = TextFieldAutoSize.RIGHT;			_isTXT.autoSize = TextFormatAlign.RIGHT;						_ofTXT.autoSize = TextFieldAutoSize.LEFT;			_ofTXT.autoSize = TextFormatAlign.LEFT;		}				public function set total(value:Number):void		{			_ofTXT.text = (value-1).toString();		}				public function set currentPhoto(value:Number):void		{			_isTXT.text = value.toString();		}	}}