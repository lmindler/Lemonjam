package com.lemonjam.ui.slideshow{	import flash.display.MovieClip;	import flash.events.ProgressEvent;	import com.lemonjam.ui.slide.Slide;	import com.lemonjam.ui.slideshow.IsOf;	import flash.events.Event;		public class SlideshowBase extends MovieClip	{		protected var _images:Array = new Array();				private var _data:Array;		private var _firstLoad:Boolean = true;		private var _showing:Boolean = false;		private var _baseURI:String = "";		private var _currentPhoto:Number = 0;				protected var _isOf:IsOf;				public function SlideshowBase() {			_isOf = new IsOf();			this.addChild(_isOf);			_isOf.y = 10;		}				public function set data(value:Array):void		{			_data = value;		}		public function get data():Array		{			return _data;		}				public function set firstLoad(value:Boolean):void		{			_firstLoad = value;		}		public function get firstLoad():Boolean		{			return _firstLoad;		}				public function set showing(value:Boolean):void		{			_showing = value;		}		public function get showing():Boolean		{			return _showing;		}				public function set currentPhoto(value:Number):void		{			_currentPhoto = value;		}				public function get currentPhoto():Number		{			return _currentPhoto;		}				public function set baseURI(value:String):void		{			_baseURI = value;		}				public function get baseURI():String		{			return _baseURI;		}				public function resize():void		{			for(var i=0;i<_images.length;i++){				_images[i].resize();			}						_isOf.x = stage.stageWidth - _isOf.width - 10;		}	}}